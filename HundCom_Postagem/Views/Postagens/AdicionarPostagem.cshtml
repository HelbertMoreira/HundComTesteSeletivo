@model HundCom_Postagem.Models.ViewModels.TopicosPostagensViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Postagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarPostagem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Postagem.TopicoId" class="control-label"></label>
                <select asp-for="Postagem.TopicoId" asp-items="@(new SelectList(Model.ListaTopicos, "Id", "Tema"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Postagem.Titulo" class="control-label"></label>
                <input asp-for="Postagem.Titulo" class="form-control" />
                <span asp-validation-for="Postagem.Titulo" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Postagem.Conteudo" class="control-label"></label>
                <input asp-for="Postagem.Conteudo" class="form-control" />
                <span asp-validation-for="Postagem.Conteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
